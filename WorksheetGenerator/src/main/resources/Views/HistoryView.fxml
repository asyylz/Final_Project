<VBox prefHeight="900.0" prefWidth="1000.0" styleClass="historyview_wrapperParent" stylesheets="@../Styles/HistoryView.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.wgapp.worksheetgenerator.Controllers.UI.HistoryController">
    <AnchorPane prefHeight="90.0" prefWidth="1000.0">
        <AnchorPane prefHeight="79.0" prefWidth="465.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="15.0">
            <TextField fx:id="searchTextField" prefHeight="42.0" prefWidth="370.0" promptText="Enter your search here..." styleClass="worksheetWindow__topSection-searchField" stylesheets="@../Styles/WorksheetWithPassageView.css" AnchorPane.bottomAnchor="15.0" />
            <StackPane prefHeight="50.0" prefWidth="50.0" AnchorPane.bottomAnchor="5.0" AnchorPane.rightAnchor="10.0">
                <Circle fx:id="backgroundCircle" fill="#9cd3d991" radius="32.0" stroke="TRANSPARENT" strokeType="INSIDE">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Circle>
                <ImageView fx:id="searchIconBtn" fitHeight="50.0" fitWidth="50.0">
                    <effect>
                        <DropShadow />
                    </effect>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                    <Image url="@../Images/search.png" />
                </ImageView>
            </StackPane>
        </AnchorPane>
    </AnchorPane>
    <AnchorPane prefHeight="800.0" prefWidth="1000.0">
        <TableView fx:id="worksheetTable" layoutX="23.0" prefHeight="600.0" prefWidth="488.0" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0">
            <columns>
                <TableColumn fx:id="noColumn" prefWidth="54.0" text="No" />
                <TableColumn fx:id="idColumn" prefWidth="49.0" text="Id" />
                <TableColumn fx:id="mainSubColumn" prefWidth="139.0" text="Main Subject" />
                <TableColumn fx:id="subSubColumn" prefWidth="116.0" text="Sub-Subject" />
                <TableColumn fx:id="diffLevelColumn" prefWidth="138.0" text="Difficulty Level" />
            </columns>
        </TableView>
      <Pagination fx:id="pagination" layoutX="134.0" layoutY="634.0" prefHeight="32.0" prefWidth="200.0" />
    </AnchorPane>
</VBox>
